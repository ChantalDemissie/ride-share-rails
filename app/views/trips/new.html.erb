<h2>Form to request a new trip</h2>

<%= form_with model: @Passenger, class: 'request_trip' do |f| %>
<p><strong>Please fill out the details of your Trip</strong></p>

  <div>
    <%= f.label :name, "Name of Passenger:" %>
    <%= f.text_field :name, placeholder: "Name" %>
  </div>

  <div>
    <%= f.label :description, "Phone Number:" %>
    <%= f.text_field :description, placeholder: "111-222-3333" %>
  </div>

  <%= f.submit "Create A New Trip", class: 'create_class_button' %>

<% end %>