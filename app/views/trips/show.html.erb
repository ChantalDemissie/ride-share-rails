<h2>Trip Details</h2>

<table class='trip_details'>

  <tr>
    <th>ID</th>
    <th>Date</th>
    <th>Driver_id</th>
    <th>Passenger_id</th>
    <th>Cost</th>
    <th>Rating</th>

  </tr>

  <tr>
    <td><%= link_to @trips.id%></td> 
    <td><%= link_to @trips.date%></td> 
    <td><%= link_to @trips.driver_id%></td> 
    <td><%= link_to @trips.passenger_id%></td> 
    <td><%= link_to "$ #{@trips.cost/100.to_f}"%></td> 
    <td><%= link_to @trips.rating%></td> 
  </tr>

</table>
