<h2>Edit Passenger Form</h2>

<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @Passenger, class: 'edit_passenger' do |f| %>
<p><strong>Edit Passenger Details</strong></p>

  <div>
    <%= f.label :name, "Name of Passenger:" %>
    <%= f.text_field :name, placeholder: "Name" %>
  </div>

  <div>
    <%= f.label :description, "Phone Number:" %>
    <%= f.text_field :description, placeholder: "111-222-3333" %>
  </div>

  <%= f.submit "Edit this Passenger"%>

<% end %>