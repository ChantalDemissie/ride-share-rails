<h2>Passenger Trip Details</h2>
<h2>The total amount spent on rides is: $<%=@earnings/100.to_f%></h2>
<h2>Request a New Trip</h2>


<table class='passenger_trip_list'>

  <tr>
    <th>ID</th>
    <th>Date</th>
    <th>Driver_id</th>
    <th>Passenger_id</th>
    <th>Cost</th>
    <th>Rating</th>
    <th>Details</th>

  </tr>

    <% @trips.each do | trip | %>
  <tr>

    <td><%= link_to trip.id, trip_details_path%></td> 
    <td><%= link_to trip.date, trip_details_path%></td> 
    <td><%= link_to trip.driver_id, trip_details_path%></td> 
    <td><%= link_to trip.passenger_id, trip_details_path%></td> 
    <td><%= link_to "$ #{trip.cost/100.to_f}", trip_details_path%></td> 
    <td><%= link_to trip.rating, trip_details_path%></td> 
  </tr>
    <% end %>

</table>
