<table>
<h2>Passenger List</h2>

  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Phone Number</th>
    <th>Edit</th>
    <th>Delete</th>

    <% @passengers.each do | passenger | %>
  </tr>
    <th><%= link_to passenger.id, passenger_path(passenger.id) %></th> 
    <th><%= link_to passenger.name, passenger_path(passenger.id) %></th> 
    <th><%= link_to passenger.phone_num, passenger_path(passenger.id) %></th> 
    <li><%= link_to "Edit", edit_passenger_path(passenger.id) %></li>
    <li><%= link_to "Delete", edit_passenger_path(passenger.id) , method: :delete, data: { confirm: "Do you really want to delete?" } %></li>
  </tr>
    <% end %>

</table>

